<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd" >
<mapper namespace="com.eyelesson.dao.Mk_commentDao">

    <insert id="InsertComment" parameterType="com.eyelesson.entity.Mk_comment">
        <selectKey keyProperty="mcid" keyColumn="mcid" resultType="int" order="BEFORE">
            select max(mkcmid)+1 from mk_comment
        </selectKey>
        insert into mk_comment(mkcmid,mkcmcontent,mkcstid,mkuid)values(#{mcid},#{mkcmcontent},#{mkcstid},#{mkuid})
    </insert>


</mapper>